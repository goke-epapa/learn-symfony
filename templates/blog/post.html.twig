{% extends 'base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <p>ID {{ id }}</a></p>
    <h3>{{ post.title | upper }}</h3>
    <p>{{ post.text }}</p>
    <p>{{ post.date | date }}</p>
    <p> {{ post.price | price }}</p>
    Here is the current locale {{ locale }}
    {{ message }}

    <p>Env: {{ app.environment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Session started: {{ app.session.isStarted }}</p>
    <p>Debug {{ app.debug }}</p>
{% endblock %}